@page "/users"
@inject IUserService _userService;
@using System.Text.Json;
@using System.Reflection;
@using FinanceApp.Services;
@using FinanceApp.ViewModel;

<PageTitle>Usuários</PageTitle>

<br />
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="form-inline col-md-4" style="vertical-align: central">
                <div><span class="fas fa-list fa-2x" /></div>&nbsp;
                <div><h4>Usuários</h4></div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Nome
                    </th>
                    <th>
                        Data de Criação
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in users)
                {
                    <tr>
                        <td>
                            @item.Id.ToString().Substring(0, 5)
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.CreatedAt.ToShortDateString()
                        </td>
                        <td class="text-right">
                            <a href="/detailuser/@item.Id"><spam class="oi oi-magnifying-glass"></spam></a>
                            <a href="/edituser/@item.Id"><spam class="oi oi-pencil"></spam></a>
                            <a href="/deleteuser/@item.Id"><spam class="oi oi-delete"></spam></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    List<UserViewModel> users = new();

    protected override async Task OnInitializedAsync()
    {
        users = await _userService.FindAllAsync();
    }
}
